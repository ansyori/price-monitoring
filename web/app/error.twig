{% extends "base.html" %}

{% block content %}
<div class="jumbotron text-center">
  <div class="container">
    <h1>URL Submission</h1>
  </div>
</div>
<div class="container">
 
  <div class="row">
    <div class="col-lg-12">

        <div class="alert alert-danger" role="alert">
         Invalid product URL
        </div>

        <form action="/post" method="post">
            <div class="input-group">
                <input name="url" type="url" class="form-control" placeholder="Please enter product URL..." required>
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Submit</button>
                </span>
            </div>
        </form>
    </div>
 </div><!-- /.row -->
  
</div>

{% endblock %} 
