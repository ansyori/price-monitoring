{% extends "base.html" %}

{% block content %}

<div class="jumbotron text-center">
  <div class="container">
    <h1>{{ product_data.product_name }}</h1>
  </div>
</div>
<div class="container">
 
  <div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
						  <div class="tab-pane active" id="pic-0"><img src="{{ product_data.main_image }}" /></div>

                          {% for n in product_data.images %}
                                <div class="tab-pane" id="pic-{{ loop.index }}"><img src="{{ n }}" /></div>
                          {% endfor %}
						
						</div>
						<ul class="preview-thumbnail nav nav-tabs">
						  <li class="active"><a data-target="#pic-0" data-toggle="tab"><img src="{{ product_data.main_image }}" /></a></li>
                          {% for n in product_data.images %}
                                <li><a data-target="#pic-{{ loop.index }}" data-toggle="tab"><img src="{{ n }}" /></a></li>
                          {% endfor %}
						</ul>
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{ product_data.product_name }}</h3>
						<p class="product-description">{{ product_data.description }}</p>
						<h4 class="price">Price: <span>{{ product_data.final_price }}</span></h4>
                        <h4 class="source">Source:</h4>
                        <a class="source-url" href="{{ product_data.url }}" target="_blank">{{ product_data.url }}</a>
					</div>
				</div>
			</div>
		</div>
  
</div>


{% endblock %}
